mixin home(img, title, location, rooms, area, price, index)
   article.home
      img.home__photo(src=`assets/img/${img}`, alt=`house ${index}`)
      svg.home__likeIcon
            use(xlink:href=`assets/img/sprite.svg#icon-heart-full`)
      h5.home__title #{title}
      .home__location 
         svg
            use(xlink:href=`assets/img/sprite.svg#icon-map-pin`)
         p #{location}
      .home__rooms
         svg
            use(xlink:href=`assets/img/sprite.svg#icon-profile-male`)
         p #{rooms} rooms
      .home__area 
         svg
            use(xlink:href=`assets/img/sprite.svg#icon-expand`)
         p #{area} m
            sup 2
      .home__price 
         svg
            use(xlink:href=`assets/img/sprite.svg#icon-key`)
         p $#{price}
      btn.btn.btn--primary.home__btn.cta(type="submit") Contact realtor